@model MemberSystem.Models.Guestbook

@{
    ViewBag.Title = "修改留言";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval.js")
}

@*create form for modify function*@
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h3>修改留言</h3>

    <table>
        <tr>
            <td>
                @Html.LabelFor(model => model.Name)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Content)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Content)
                @Html.ValidationMessageFor(model => model.Content)
            </td>
        </tr>
    </table>

    @*show button if no reply*@
    if(Model.ReplyTime==null)
    {
        <input type="submit" value="修改留言" />
    }
    else
    {
        <text>被回復的留言不能再更改</text>
        @Html.ActionLink("返回列表","Index")
    }
}


